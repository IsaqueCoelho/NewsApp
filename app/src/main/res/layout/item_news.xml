<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    android:id="@+id/cardview_news"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/medium_margin"
    android:layout_marginEnd="@dimen/medium_margin"
    android:layout_marginTop="@dimen/medium_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_newstitle"
            style="@style/TitleItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            style="@style/LineItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TitleItem.topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_textview_newsdate" />

            <TextView
                style="@style/TopicResponse"
                android:id="@+id/textview_newsdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            style="@style/LineItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TitleItem.topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_textview_newsauthor" />

            <TextView
                style="@style/TopicResponse"
                android:id="@+id/textview_newsauthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</android.support.design.card.MaterialCardView>